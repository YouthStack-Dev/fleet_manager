# Fleet Manager Production Environment Variables - EXAMPLE FILE
# ===========================================
# Copy this file to service.prod.env and fill in your actual values
# NEVER commit service.prod.env to git - it contains secrets!

# Logging Configuration
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1
PYTHONIOENCODING=utf-8
FORCE_COLOR=1

# Firebase Configuration
FIREBASE_KEY_PATH=/app/firebase/firebase_key.json
FIREBASE_DATABASE_URL=https://your-firebase-project.firebaseio.com

# Auth Configuration
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS_MIN
TOKEN_EXPIRY_HOURS=24
X_INTROSPECT_SECRET=CHANGE_THIS_TO_RANDOM_STRING
OAUTH2_URL=http://service_manager:8000/api/v1/auth/introspect
OAUTH2_ENV=production

# SMTP Email Configuration
EMAIL_ENABLED=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Global Admin Email Settings
SENDER_EMAIL=your-email@gmail.com
SENDER_NAME=Fleet Manager Admin
SUPPORT_EMAIL=support@your-domain.com

# Email delivery settings
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=5
EMAIL_QUEUE_ENABLED=false

# Frontend URL
FRONTEND_URL=https://your-production-domain.com

# Twilio SMS Configuration (optional)
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your-verify-service-sid

# Production Environment
ENV=production
DEBUG=false
